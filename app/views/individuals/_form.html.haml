=form_for ([@episode, @individual]) do |f|
	.field
		= f.label :role
		= f.text_field :role
	.field
		= f.label :cast
		= f.check_box :cast
	.field
		= f.label :first_name
		= f.text_field :first_name
	.field
		= f.label :middle_name
		= f.text_field :middle_name
	.field
		= f.label :surname
		= f.text_field :surname
	.field
		= f.label :biography
		= f.text_area :biography
	.actions
		= f.submit "Save"
= form_for([@season, @episode]) do |f|
  - if @episode.errors.any?
    %h2= "#{pluralize(@episode.errors.count, "error")} prohibited this episode from being saved:"
    %ul
      - @episode.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :first_shown
    = f.date_select :first_shown, start_year: 1990, end_year: 2000
  .field
    = f.label :brief_desc
    = f.text_area :brief_desc
  .actions
    = f.submit 'Save'